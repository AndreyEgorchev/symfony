{% trans_default_domain 'FOSUserBundle' %}
<div class="col-md-9">
{{ form_start(form,{'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-horizontal'}}) }}


<div class="form-group">

        {{ form_label(form.email, null, { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
        {{ form_errors(form.email) }}
    <div class="col-sm-10">
        {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
    </div>
</div>
<div class="form-group">

        {{ form_label(form.username, "Прізвище Ім'я", { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
        {{ form_errors(form.username) }}
    <div class="col-sm-10">
        {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
    </div>
</div>
<div class="form-group">

        {{ form_label(form.plainPassword, 'Пароль',{ 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
    <div class="col-sm-10">
        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>
<div class="form-group">
        {{ form_label(form.plainPassword, 'Повторіть пароль',{ 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
    <div class="col-sm-10">
        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <input type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
</div>

{{ form_end(form) }}
</div>