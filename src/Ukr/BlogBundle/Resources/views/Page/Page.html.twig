{% extends 'base_for_blog.html.twig' %}
{% block body %}
    {% for post in posts %}
        <div class="blog-post">
            <h2 class="blog-post-title">
                <a href="{{ path('_ukrshow', { 'id': post.id }) }}">
                    {{ post.title }}
                </a>
            </h2>
            <p class="blog-post-meta">
                {{ post.created|date('d.m.Y') }}
                {% if post.published %}
                    <span class="glyphicon glyphicon-ok"></span>
                {% else %}
                    <span class="glyphicon glyphicon-remove"></span>
                {% endif %}
            </p>
            <p>{{ post.description }}</p>
            <hr>

            <p>{{ post.text[:250] ~ '...' }}</p>
            {{ post.updated|date('d.m.Y') }}

        </div>
   {% endfor %}


    <ul>
        <li>
            <a href="{{ path('ukr_blog_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
